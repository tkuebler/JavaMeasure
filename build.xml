<project name="javameasure" default="compile">

	<property file="build.properties"/>
	
	<target name="init">
		<tstamp/>
		<mkdir dir="${builddir}"/>
		<mkdir dir="${docdir}"/>
	</target>
	
	<target name="compile" depends="init">	
		<javac destdir="${builddir}" source="1.4">
			
			<src path="src"/>
			<include name="**"/>
		</javac>		
	</target>
	
	<target name="jar">
		<jar destfile="${libdir}/javameasure.jar"
			basedir="${builddir}"
		/>
	</target>
	<target name="clean">
		<delete dir="${builddir}"/>
		<delete dir="${docdir}"/>
	</target>

	<target name="doc" depends="init">
		<javadoc packagenames="com.diddlebits.measure.*"
		       sourcepath="src"
		       defaultexcludes="yes"
		       destdir="${docdir}"
		       author="true"
		       version="true"
		       use="true"
		       windowtitle="Java Measure API">
		</javadoc>
	</target>

	<target name="all" depends="clean, compile, jar, doc">
	</target>

</project>
